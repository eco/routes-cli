{
  "name": "eco-routes-cli",
  "version": "1.0.0",
  "description": "CLI tool for publishing intents to EVM, TVM, and SVM chains",
  "main": "dist/index.js",
  "bin": {
    "eco-routes-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx -r tsconfig-paths/register src/index.ts",
    "dev:testnet": "NODE_CHAINS_ENV=development tsx -r tsconfig-paths/register src/index.ts",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "blockchain",
    "intent",
    "cli",
    "evm",
    "tvm",
    "svm"
  ],
  "author": "Eco Protocol",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.91.8",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.3.7",
    "ora": "^8.2.0",
    "tronweb": "^6.0.0",
    "viem": "^2.21.58"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.16",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
